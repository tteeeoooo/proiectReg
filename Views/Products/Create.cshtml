<form method="post" action="/Products/Create">
    <div class="form-group">
        <label for="Name">Titlu produs</label>
        <input type="text" class="form-control" id="Name" name="Name" required />
    </div>
    <div class="form-group">
        <label for="Description">Continut produs</label>
        <textarea class="form-control" id="Description" name="Description" required></textarea>
    </div>
    <div class="form-group">
        <label for="Price">Price produs</label>
        <input type="text" class="form-control" id="Price" name="Price" required />
    </div>
    <div class="form-group">
        <label for="Brand">Brand produs</label>
        <input type="text" class="form-control" id="Brand" name="Brand" required />
    </div>
    <div class="form-group">
        <label for="Ingredients">Ingredients produs</label>
        <input type="text" class="form-control" id="Ingredients" name="Ingredients" required />
    </div>
    <div class="form-group">
        <label for="CategoryId">Categorie produs</label>
        <select class="form-control" id="CategoryId" name="CategoryId" required>
            <option value="">Selecteaza o categorie</option>
            @foreach (var category in ViewBag.AllCategories)
            {
                <option value="@category.Id">@category.CategoryName</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-success">Adauga produsul</button>
</form>